<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:windowSoftInputMode="stateVisible|adjustPan"
    android:background="@color/background_activity"
    >

    <RelativeLayout
        android:id="@+id/inputContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerHorizontal="true"
        android:background="@color/color_white"
        android:padding="10dp"
        >
        <com.bitdubai.fermat_android_api.layer.definition.wallet.views.FermatTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/padding"
            android:paddingRight="@dimen/padding"
            android:paddingTop="@dimen/padding"
            android:orientation="vertical"
            android:textAlignment="center"
            android:gravity="center"
            android:textColor="@color/black"
            android:text="@string/cht_send_error_text1"
            android:textSize="18sp"
            android:padding="10dp"
            android:id="@+id/message1"
            android:layout_gravity="fill_horizontal"
            />
        <EditText
            android:id="@+id/messageEdit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:autoText="true"
            android:layout_below="@+id/message1"
            android:textColorHint="@color/cht_send_error_hint"
            android:layout_marginTop="10dp"
            android:inputType="textEmailAddress"
            android:hint="@string/cht_send_error_hint"
            android:backgroundTint="@color/cht_send_error_background_tint"
            android:textColor="@color/cht_send_error_text"
            />
        <RelativeLayout
            android:id="@+id/buttonContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="10dp"
            android:background="@color/color_white"
            android:layout_gravity="center_horizontal|bottom"
            android:padding="20dp"
            android:layout_below="@+id/messageEdit"
            >
            <Button
                android:id="@+id/okButton"
                android:layout_height="wrap_content"
                android:background="@color/cht_send_error_button_background"
                android:text="@string/ok_button"
                android:textAlignment="center"
                android:gravity="center"
                android:paddingTop="@dimen/margin_15dp"
                android:paddingBottom="@dimen/margin_15dp"
                android:paddingLeft="@dimen/margin_60dp"
                android:paddingRight="@dimen/margin_60dp"
                android:layout_width="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"/>

            <Button
                android:id="@+id/cancelButton"
                android:layout_height="wrap_content"
                android:background="@color/cht_send_error_button_background"
                android:text="@string/cancel_button"
                android:textAlignment="center"
                android:gravity="center"
                android:paddingTop="@dimen/margin_15dp"
                android:paddingBottom="@dimen/margin_15dp"
                android:paddingLeft="@dimen/margin_50dp"
                android:paddingRight="@dimen/margin_50dp"
                android:layout_width="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"/>
        </RelativeLayout>
        <com.bitdubai.fermat_android_api.layer.definition.wallet.views.FermatTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/padding"
            android:paddingRight="@dimen/padding"
            android:paddingTop="@dimen/padding"
            android:orientation="vertical"
            android:textAlignment="center"
            android:gravity="center"
            android:textColor="@color/black"
            android:text="@string/cht_send_error_text2"
            android:textSize="18sp"
            android:padding="10dp"
            android:layout_gravity="fill_horizontal"
            android:layout_below="@+id/buttonContainer"
            android:id="@+id/copyText" />
        <EditText
            android:id="@+id/copyEdit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/cht_send_error_background_tint"
            android:textColor="@color/black"
            android:lines="10"
            android:hint="@string/cht_send_error_hint_hold"
            android:scrollbars="vertical"
            android:inputType="textNoSuggestions|textMultiLine"
            android:layout_below="@+id/copyText"
            />
    </RelativeLayout>
</FrameLayout>