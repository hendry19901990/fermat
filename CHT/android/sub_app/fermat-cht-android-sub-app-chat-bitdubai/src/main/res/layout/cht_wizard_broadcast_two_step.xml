<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="@string/cht_broadcaster_recipients"
            android:id="@+id/textView"
            android:drawableEnd="@android:drawable/btn_plus"
            android:drawableRight="@android:drawable/btn_plus"
            android:textColor="@color/cht_broadcaster_text"
            android:singleLine="false"
            android:textAlignment="center"
            android:gravity="center"
            android:layout_marginTop="46dp"
            android:layout_below="@+id/editTextNameBroadcast"
            android:layout_centerHorizontal="true" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:textColor="@color/cht_broadcaster_simple_name"
            android:id="@+id/editTextContacts"
            android:hint="@string/cht_broadcaster_simple_contact_hint"
            android:layout_below="@+id/textView"
            android:layout_alignStart="@+id/textView"
            android:layout_alignLeft="@+id/textView"
            android:layout_alignEnd="@+id/textView"
            android:layout_alignRight="@+id/textView"
            android:textColorHint="@color/cht_broadcaster_simple_name_hint" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="@string/cht_broadcaster_simple_text"
            android:id="@+id/textView3"
            android:layout_gravity="center_horizontal"
            android:textColor="@color/cht_broadcaster_type_title"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="49dp" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:textColor="@color/cht_broadcaster_simple_name"
            android:id="@+id/editTextNameBroadcast"
            android:hint="@string/cht_broadcaster_simple_name_hint"
            android:layout_below="@+id/textView3"
            android:layout_centerHorizontal="true"
            android:textColorHint="@color/cht_broadcaster_simple_name_hint" />

        <ListView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/listView"
            style="@style/ContactListView"
            android:textColor="#000"
            android:cacheColorHint="#000"
            android:layout_below="@+id/editTextContacts"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"/>
    </RelativeLayout>
</LinearLayout>