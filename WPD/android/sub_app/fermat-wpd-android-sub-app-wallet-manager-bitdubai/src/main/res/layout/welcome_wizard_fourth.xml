<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@null">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingLeft="32dp"
            android:paddingRight="32dp">

            <com.bitdubai.fermat_android_api.layer.definition.wallet.views.FermatTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/welcome_wizzard_fourth_title"
                android:gravity="center"
                android:textColor="#0EAF9E"
                android:textSize="36sp"
                app:typeface="CAVIAR_DREAMS"
                android:paddingTop="20dp"
                />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="150dp"
                android:src="@drawable/banner_communities_hdpi"
                android:layout_gravity="center"
                android:layout_marginBottom="8dp"/>


            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#0EAF9E"
                android:layout_marginBottom="16dp"/>

            <com.bitdubai.fermat_android_api.layer.definition.wallet.views.FermatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="left"
                app:typeface="CAVIAR_DREAMS"
                android:textColor="#58595B"
                android:textSize="15sp"
                android:lineSpacingExtra="5dp"
                android:text="@string/welcome_text_community"/>
        </LinearLayout>

    </ScrollView>



</LinearLayout>